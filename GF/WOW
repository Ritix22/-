<script>
  const swimmer = document.getElementById("swimmer");
  const message = document.getElementById("message");

  function yesClicked() {
    swimmer.style.left = "520px";
    message.textContent = "She made it across! üíô Thanks for saying yes!";
  }

  function noClicked() {
    swimmer.style.opacity = "0.2";
    swimmer.style.left = "10px";
